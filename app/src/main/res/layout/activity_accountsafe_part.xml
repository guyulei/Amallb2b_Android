<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorffffff"
    android:orientation="vertical"
    tools:context="com.amall360.amallb2b_android.ui.activity.setting.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/colorffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp12"
            android:text="登录账户名"
            android:textColor="@color/color22222c"
            android:textSize="@dimen/sp16"/>

        <TextView
            android:id="@+id/managementmodel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp12"
            android:text="生产厂商"
            android:textColor="@color/color9999ac"
            android:textSize="@dimen/sp13"/>
    </LinearLayout>

    <include
        layout="@layout/public_layout_line_match"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/colorffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp12"
            android:text="登陆安全"
            android:textColor="@color/color22222c"
            android:textSize="@dimen/sp16"/>

        <ImageView
            android:id="@+id/login_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp12"
            android:src="@mipmap/tip_right"/>
    </LinearLayout>

    <include
        layout="@layout/public_layout_line_match"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/colorffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp12"
            android:text="支付安全"
            android:textColor="@color/color22222c"
            android:textSize="@dimen/sp16"/>

        <ImageView
            android:id="@+id/pay_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp12"
            android:src="@mipmap/tip_right"/>
    </LinearLayout>

    <include
        layout="@layout/public_layout_line_match"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/colorffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp12"
            android:text="银行卡账户"
            android:textColor="@color/color22222c"
            android:textSize="@dimen/sp16"/>

        <ImageView
            android:id="@+id/bankcard_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp12"
            android:src="@mipmap/tip_right"/>
    </LinearLayout>
    <include
        layout="@layout/public_layout_line_match"></include>
</LinearLayout>

