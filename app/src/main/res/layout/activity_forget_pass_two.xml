<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colore5e5e5"
    android:orientation="vertical"
    tools:context="com.amall360.amallb2b_android.ui.activity.ForgetPassOneActivity">

    <include
        android:id="@+id/title"
        layout="@layout/public_layout_imagtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp25"
        android:text="为确保是您本人操作,请完成已下认证"
        android:textColor="@color/color22222c"
        android:textSize="@dimen/sp16"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp12"
        android:text="我们已经发送了验证码到您的手机:"
        android:textColor="@color/color22222c"
        android:textSize="@dimen/sp14"/>

    <TextView
        android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp25"
        android:text="xxxxxxx1234"
        android:textColor="@color/color22222c"
        android:textSize="@dimen/sp19"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/colorffffff">

        <TextView
            android:id="@+id/textLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp12"
            android:text="验证码"
            android:textColor="@color/color22222c"
            android:textSize="@dimen/dp16"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageRight"
            android:layout_toRightOf="@+id/textLeft"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="短信验证码"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp3"
            android:textColor="@color/color22222c"
            android:textColorHint="@color/color9999a3"
            android:textSize="@dimen/dp16"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/imageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp12"
            android:text="60s后重发"/>

    </RelativeLayout>


    <include
        android:id="@+id/newpassword"
        layout="@layout/public_layout_texteditimge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"></include>


</LinearLayout>

