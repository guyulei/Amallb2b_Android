<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf5f5f5"
    android:orientation="vertical">

    <include
        layout="@layout/public_layout_back_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginTop="@dimen/dp15"
        android:background="@color/colorffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp12"
            android:text="手机号"
            android:textColor="@color/color22222c"
            android:textSize="@dimen/dp16"/>

        <EditText
            android:id="@+id/telephone"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp44"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp3"
            android:textColor="@color/color22222c"
            android:textColorHint="@color/color9999a3"
            android:textSize="@dimen/dp16"/>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/colore5e5e5"></View>

        <TextView
            android:id="@+id/codeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp12"
            android:text="获取验证码"
            android:textColor="@color/colorf23030"
            android:textSize="@dimen/sp14"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/colorffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp12"
            android:text="验证码"
            android:textColor="@color/color22222c"
            android:textSize="@dimen/dp16"/>

        <EditText
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp44"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp3"
            android:textColor="@color/color22222c"
            android:textColorHint="@color/color9999a3"
            android:textSize="@dimen/dp16"/>

        <ImageView
            android:id="@+id/codetest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp12"
            android:src="@mipmap/clean_press"/>

    </LinearLayout>

    <include
        layout="@layout/public_layout_butten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25"></include>


</LinearLayout>


